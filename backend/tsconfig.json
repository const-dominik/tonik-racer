{
    "extends": "../tsconfig.json",
    "compilerOptions": {
        "target": "ES2020",
        "module": "commonjs",
        "lib": ["ES2020"],
        "moduleResolution": "node",
        "outDir": "./dist",
        "declaration": true,
        "sourceMap": true,
        "baseUrl": ".",
        "paths": {
            "@/types/*": ["../types/*"]
        }
    },
    "include": ["src/**/*.ts"],
    "exclude": ["node_modules", "dist"]
}
